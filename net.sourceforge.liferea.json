{
    "app-id":"net.sourceforge.liferea",
    "runtime":"org.gnome.Platform",
    "runtime-version":"42",
    "sdk":"org.gnome.Sdk",
    "command":"liferea",
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "finish-args":[
        "--device=dri",
        "--filesystem=xdg-download",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "modules":[
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name":"libpeas",
            "buildsystem" : "meson",
            "cleanup":[
                "/bin/*",
                "/lib/peas-demo"
            ],
            "sources":[
                {
                    "type":"archive",
                    "url":"https://download.gnome.org/sources/libpeas/1.34/libpeas-1.34.0.tar.xz",
                    "sha256":"4305f715dab4b5ad3e8007daec316625e7065a94e63e25ef55eb1efb964a7bf0"
                }
            ]
        },

        {
            "name": "git",
            "make-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "make-install-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.40.0.tar.xz",
                    "sha256": "b17a598fbf58729ef13b577465eb93b2d484df1201518b708b5044ff623bf46d"
                }
            ]
        },
        {
            "name": "aria2",
            "config-opts": [
                "--enable-libaria2",
                "--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "58d1e7608c12404f0229a3d9a4953d0d00c18040504498b483305bcb3de907a5",
                    "url": "https://github.com/aria2/aria2/releases/download/release-1.36.0/aria2-1.36.0.tar.xz"
                }
            ]
        },
        {
            "name":"liferea",
            "sources":[
                {
                    "type":"git",
                    "url":"https://github.com/lwindolf/liferea.git",
                    "tag": "v1.14.5",
                    "commit":"6f2c9920de0d483d56ad81ff1621b5cbc84a7bea"
                },
                {
                    "type":"patch",
                    "path":"patches/appdata.patch"
                },
                {
                    "type":"patch",
                    "path":"patches/download.patch"
                }
            ]
        }
    ]
}
